{
  "extends": "@repo/typescript-config/vite.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/core/context/querytsx"],
  "exclude": ["node_modules", "dist", "dev-dist"]
}
